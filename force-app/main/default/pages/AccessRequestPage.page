<apex:page controller="AccessRequestController" showHeader="false" sidebar="false">
    <!-- Header Section with Logo and Title -->
    <div style="text-align: center; padding: 10px; background-color: #003366; color: white;">
        <img src="{!$Resource.AT_T_Logo}" alt="AT&T Logo" style="width: 80px; vertical-align: middle;"/>
        <h2 style="display: inline; margin-left: 20px;font-size: 1.5em; font-weight: bold;">ACC User Access Management</h2>
    </div>

    <!-- Custom CSS for Styling -->
    <style>
        .form-container {
            max-width: 400px;
            margin: 0 auto 20px auto; /* Align to center, with margin bottom */
            padding: 20px;
            border: 1px solid #d9d9d9;
            border-radius: 8px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
            background-color: #f9f9f9;
        }

        .tab-container {
            max-width: 400px;
            margin: 0 auto; /* Center the tabs */
            display: flex;
            border-top-left-radius: 8px;
            border-top-right-radius: 8px;
            overflow: hidden;
        }

        .tab {
            width: 50%;
            text-align: center;
            padding: 10px;
            cursor: pointer;
            font-weight: bold;
            color: #003366;
            background-color: #f1f1f1;
            border: 1px solid #d9d9d9;
            transition: background-color 0.3s;
            box-sizing: border-box;
        }

        .tab.active {
            background-color: #00a8e0; /* Light green for active tab */
            color: #003366;
        }

        .form-group {
            margin-bottom: 15px;
            text-align: left;
        }

        .form-group label {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
            color: #333;
        }

        .form-group input,
        .form-group select {
            width: 100% !important;
            padding: 8px;
            font-size: 14px;
            border: 1px solid #d9d9d9;
            border-radius: 4px;
            box-sizing: border-box;
        }
    </style>

    <!-- Tab Navigation -->
    <div class="tab-container">
        <div class="tab active" onclick="showTab('modify', this)">Modify Access</div>
        <div class="tab" onclick="showTab('create', this)">New User Access</div>
    </div>

    <!-- Form Containers for Each Tab -->
    <div id="modify" class="form-container" style="display: block;">
        <apex:form >
            <apex:pageMessages />
            <!-- Fields for Modify Access -->
            <div class="form-group">
                <label for="envSelect">Environment</label>
                <apex:selectList value="{!selectedEnvironmentId}" size="1" id="envSelect" required="true">
                    <apex:selectOptions value="{!environmentOptions}" />
                </apex:selectList>
            </div>
            <div class="form-group">
                <label for="userName">User Name</label>
                <apex:inputText value="{!accessRequest.ATT_UID__c}" id="userName" styleClass="text-input" required="true"/>
            </div>
            <div class="form-group">
                <label for="profile">Profile</label>
                <apex:inputField value="{!accessRequest.Profile_Access__c}" id="profile" required="true"/>
            </div>
            <div class="form-group">
                <label for="duration">Duration for Access</label>
                <apex:inputField value="{!accessRequest.Access_Given_For__c}" id="duration" required="true"/>
            </div>
            <div class="form-group">
                <apex:commandButton value="Submit Request" action="{!saveAccessRequest}" styleClass="btn"/>
            </div>
        </apex:form>
    </div>

    <div id="create" class="form-container" style="display: none;">
        <apex:form >
            <apex:pageMessages />
            <!-- Fields for Create Access -->
            <div class="form-group">
                <label for="envSelect">Environment</label>
                <apex:selectList value="{!selectedEnvironmentId}" size="1" id="envSelect" required="true">
                    <apex:selectOptions value="{!environmentOptions}" />
                </apex:selectList>
            </div>
            <div class="form-group">
                <label for="firstName">First Name</label>
                <apex:inputText value="{!accessRequest.First_Name__c}" id="firstName" styleClass="text-input" required="true"/>
            </div>
            <div class="form-group">
                <label for="lastName">Last Name</label>
                <apex:inputText value="{!accessRequest.Last_Name__c}" id="lastName" styleClass="text-input" required="true"/>
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <apex:inputText value="{!accessRequest.ATT_Email__c}" id="email" styleClass="text-input" required="true"/>
            </div>
            <div class="form-group">
                <label for="replicateUserName">Replicate User Name</label>
                <apex:inputText value="{!accessRequest.Replicate_UserName__c}" id="replicateUserName" styleClass="text-input" required="true"/>
            </div>
            <div class="form-group">
                <apex:commandButton value="Submit Request" action="{!saveCreateAccessRequest}" styleClass="btn"/>
            </div>
        </apex:form>
    </div>

    <!-- JavaScript for Tab Functionality -->
    <script>
        function showTab(tabId, element) {
            // Hide all form containers
            document.getElementById('modify').style.display = 'none';
            document.getElementById('create').style.display = 'none';

            // Remove active class from all tabs
            const tabs = document.querySelectorAll('.tab');
            tabs.forEach(tab => tab.classList.remove('active'));

            // Show the selected tab's form container
            document.getElementById(tabId).style.display = 'block';

            // Add active class to the clicked tab
            element.classList.add('active');
        }
    </script>
</apex:page>